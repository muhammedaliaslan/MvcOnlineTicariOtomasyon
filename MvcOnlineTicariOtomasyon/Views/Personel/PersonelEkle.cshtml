@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Personel Ekleme Sayfası</h2>
<br />

<form class="form-group" method="post">
    <span class="font-weight-bold">Personel Adı</span>
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Personel Soyad</span>
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Personel Görsel</span>
    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Departman</span>
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", style = "margin-top:10px;" })

    <button class="btn btn-primary" style="margin-top:20px;">Kaydet</button>
</form>
