@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />

<form class="form-group" method="post">
    <span class="font-weight-bold">Ürün Adı</span>
    @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Cari</span>
    @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Personel</span>
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Adet</span>
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Fiyat</span>
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", style = "margin-top:10px;" })
    <br />
    <span class="font-weight-bold">Toplam Tutar</span>
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control", style = "margin-top:10px;" })

    <button class="btn btn-primary" style="margin-top:20px;">Satış Yap</button>
</form>
