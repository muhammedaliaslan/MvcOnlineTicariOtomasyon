<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>MARKA</th>
            <th>STOK</th>
            <th>ALIŞ FİYAT</th>
            <th>SATIŞ FİYAT</th>
            <th>KATEGORİ</th>
            <th>GÖRSEL</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunID</td>
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyati</td>
            <td>@u.SatisFiyati</td>
            <td>@u.Kategori.KategoriAd</td>
            <td>

                <div class="col-6 col-md-6 col-lg-4">
                    <img src="@u.UrunGorsel" style="max-width: 150%; height:auto" />
                </div>

            </td>
            <td><a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün Ekle</a>

